@model IEnumerable<RestaurantDL.Restaurant>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="card">
        <div class="card-body">
            <h1>Welcome to Revature Eats!</h1>
            <p class="lead">A restaurant review site</p>
        </div>
    </div>
</div>

@foreach(var item in Model)
{
    <div class="card">
        <div class="card-body">
            <h1>@item.name</h1>
        </div>
    </div>
}